
@using BlazorAppExcel.Models;
@using BlazorAppExcel.Share.Enums
@using BlazorAppExcel.Share.Models
@* @inject ISnackbar Snackbar *@
@using BlazorAppExcel.Components.Cells

<div class="d-flex flex-column mb-3">
  
        @foreach (var (item, index) in Columns.Select((item, index) => (item, index)))
        {
            var typeSelected = this.Types[index];
            <div class="p-2">
            <CellSelectElement Index="@index" Name="@item" Value="@typeSelected" Values="@Items" OnChildParameterChanged="@((string e)=>UpdateChildParameter(e, index))"></CellSelectElement>
            </div>

        }
    
</div>

   <div class="float-end">
        <Button Color="ButtonColor.Secondary" @onclick="Cancel">Close</Button>
        <Button Color="ButtonColor.Primary" @onclick="SaveItem">Save changes</Button>
   </div>




@code {

    private Modal modal = default!;
    IDictionary<string,string> Items = ExcelCellTypeUtil.GetEnumDictionary();

    [Parameter] public IList<string> Columns { get; set; }
    [Parameter] public IList<string> Types { get; set; }
    [Parameter] public Action<IList<string>> Save { get; set; }
    [Parameter] public Action Cancel { get; set; }

    // [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    private void UpdateChildParameter(string value, int index)
    {
        this.Types[index] = value;
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        // this.StateHasChanged();
    }


    private void SaveItem()
    {
        Save(Types);

    }

}
