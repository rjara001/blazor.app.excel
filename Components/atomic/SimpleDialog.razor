@using MudBlazor

<Dialog>
    <DialogContent>
        @Title
    </DialogContent>
    <DialogActions>
        <Button OnClick="Cancel">Cancel</MudButton>
        <Button Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [Parameter]
    public string Title { get; set; }

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}