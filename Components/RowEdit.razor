@using BlazorAppExcel.Models
@using BlazorAppExcel.Share.Models

    
    

            <MudTextField T="string" @ref="ValuesMudTextField[item.Name]" Value="@item.Value" Label="@item.Name" />

@code {
    [Parameter] CellExcel Item { get; set; }

    protected override void OnInitialized()
        {
            base.OnInitialized();
            MudTextField<string> mudTextField = this.ValuesMudTextField.FirstOrDefault(_ => _.Key == item.Name).Value;

        @if (mudTextField == null)
        {
            mudTextField = new MudTextField<string>();
            mudTextField.Tag = item;

            ValuesMudTextField.Add(item.Name, mudTextField);
        }
        }
}
