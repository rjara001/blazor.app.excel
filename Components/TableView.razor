        {

            for (int i = this.RowsSelected.Count - 1; i >= 0; i--)
            {
                if (this.RowsSelected[i])
                {
                    RowCellExcel.DeleteRow(this.Table, i);
                    this.RowsSelected.RemoveAt(i);
                }
            }
        }
